/**index.wxss**/
.container {
  padding: 0;
}
/*轮播*/
.swiper{
  width: 750rpx;
  height: 416rpx;
}
.swiper swiper-item image{
  display: block;
  width: 100%;
  height: 100%;
}
.img_tip{
  position: absolute;
  width: 750rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.2);
  margin-top: -100rpx;
  color: #fff;
  font-size: 30rpx;
  box-sizing: border-box;
  padding:10rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 搜索 */
.search{
  width: 90%;
  margin: 20rpx auto;
  display: flex;
  justify-content: flex-start;
  border:1px solid #ddd;
  padding: 5rpx 10rpx;
  border-radius: 5px;
  background: #fff;
}
.search .icon-search image{
    width: 42rpx;
    height:42rpx;
    vertical-align: middle;
}
.weui-cells.weui-cells.after-title{
  width: 90%;
}
/*最新最热切换  */
.main{width:100%;border-top:1rpx solid #ddd;background: #fff;}
.nav{width:100%;height:68rpx;display:flex;flex-direction:row;border-bottom:1rpx solid #ddd;}
.default{line-height:68rpx;text-align:center;flex:1;color:#000;font-size:28rpx;}
.red{line-height:68rpx;text-align:center;color:#fc5558;flex:1;font-size:28rpx;}
.red span{display:inline-block;padding:0 20rpx;border-bottom:2px solid #ff4444;}
.show{display:block;}
.hidden{display:none;}
.service-list{
	padding: 0 20rpx;
}
.service-item{
	display: flex;
	padding: 20rpx 0; 
	border-bottom: 1rpx solid #e8e8e8;
  position: relative;
}
.service-img{
	width: 220rpx;
	height: 220rpx;
}
.service-item image{
	width: 220rpx;
	height: 220rpx;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #000000;
	width: 100%;
	font-size: 34rpx;
  font-weight: bold;
  padding-top:6rpx;
  height: 96rpx;
  display: -webkit-box;  
  display: -moz-box;  
  overflow: hidden;  
  text-overflow: ellipsis;  
  word-break: break-all;  
  -webkit-box-orient: vertical;  
  -webkit-line-clamp:2;  
}
.service-tags{
	margin: 6rpx 0;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}
.service-city{
	color: #666;
}
.caozuo{
  padding-top: 75rpx;
  display: flex;
  justify-content:space-between;
  height: 63rpx;
  line-height: 63rpx;
}
.caozuo .service-price{
    color:#ff4444;
}
.caozuo .service-gouwu image{
    width: 56rpx;
    height: 56rpx;
}
.service-text .buy-response {
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
    height: 120rpx;
    width: 120rpx;
    opacity: 0;
}