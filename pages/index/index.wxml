<!--index.wxml-->
<view class="container">
    <!--轮播图 -->
    <swiper class="swiper" bindtap="imgPreview"  indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="#fff">
      <block wx:for="{{lunbo}}">
        <swiper-item>
          <image src="{{item.icon}}" class="slide-image" width="355" height="150" id="{{index}}" catchtap="swipclick"/>
        </swiper-item>
      </block>
    </swiper>
    <!--搜索  -->
    <view class="search" bindtap="search">
        <view class="icon-search"><image src="https://qncdn.playonwechat.com/shangcheng/search.png"></image></view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <input class="weui-input"  placeholder="搜索商品" readonly="readonly"/>
            </view>
        </view>
    </view> 
    <!--内容  -->
    <!--nav -->
    <view class="main">
        <view class="nav bc_white">
             <view class="{{active == 0?'red':'default'}}" bindtap="tapKeyWorld" data-ontap="hot" data-cate="0" data-active = "0"><span>最热</span></view>
             <view class="{{active == 1?'red':'default'}}" bindtap="tapKeyWorld" data-ontap="newest" data-cate="0" data-active = "1"><span>最新</span></view> 
        </view>
        <!--content -->
        <view>
            <view class="service-list">
              <navigator class="service-item" wx:for="{{main_content}}" wx:key="{{item.gid}}" url="../inform/inform?gid={{item.gid}}">
                    <view class="service-img">
                        <image src="{{item.picture}}" mode="aspectFill"></image>
                    </view>
                    <view class="service-text">
                        <view class="service-tite">{{item.good_name}}</view>
                        <view class="caozuo">
                            <text class="service-price">￥{{item.price}}</text>
                            <view class="service-gouwu"><image src="https://qncdn.playonwechat.com/shangcheng/car.png"></image></view>
                        </view>
                        <view id="gouwu{{item.gid}}" class="buy-response" catchtap="addCar"></view>
                    </view>
                </navigator>
            </view>
        </view>
    </view>
    <!--结束  -->
    <!--分类模块开始  -->
    <view class="modelAll{{index}}" style="width:100%" wx:for="{{modules}}" wx:key="{{item.id}}" >
        <navigator class="nextUrl" url="../more/more?cate_id={{item.cate_id}}">
            <view class="medit">
                <view class="center">
                    <text class="title">{{item.cate_name}}</text>
                    <view class="all">查看全部<image src="https://qncdn.playonwechat.com/shangcheng/next.png"></image></view>
                </view>
            </view>
        </navigator>
        <!--轮播图 -->
        <swiper class="swiper" bindtap="imgPreview"  indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="#fff">
          <block wx:for="{{imgUrls}}">
            <swiper-item>
              <image src="{{item}}" class="slide-image" width="355" height="150" id="{{index}}" catchtap="swipclick"/>
            </swiper-item>
          </block>
        </swiper>
        <!--nav1  -->
        <view class="nav bc_white">
            <view  wx:for="{{item.sonCategory}}" wx:key="{{index}}"  wx:for-item="tab" class="{{cate == tab.cate_id?'red':'default'}}" bindtap="tapKeyWorld1" data-ontap="{{tab.cate_name}}" data-cate="{{tab.cate_id}}"><span>{{tab.cate_name}}</span></view>
        </view>
        <!--列表  -->
        <view class="modeList">
            <view class="service-list">
                <navigator class="service-item" wx:for="{{main_content1}}" wx:key="{{item.id}}" url="../inform/inform?gid={{item.gid}}">
                    <view class="service-img">
                        <image src="{{item.imgurl}}" mode="aspectFill"></image>
                    </view>
                    <view class="service-text">
                        <view class="service-tite">{{item.name}}</view>
                        <view class="caozuo">
                            <text class="service-price">￥{{item.price}}</text>
                            <view class="service-gouwu"><image src="{{item.img}}" ></image></view>
                        </view>
                        <view id="gouwu{{item.id}}" class="buy-response" catchtap="addCar"></view>
                    </view>
                </navigator>
            </view>
        </view>
    </view>
    <!--查看全部  -->
    <view class="all" bindtap="seeAll">
        查看全部
    </view>
    <!--购物车弹窗  -->
    <view class="bg {{addCar?'show':'hidden'}}"></view> 
    <view class="carBox {{addCar?'show':'hidden'}} carBox{{num}}">
        <view class="padding">
            <view class="top">
                <view class="left">
                    <image src="https://qncdn.playonwechat.com/shangcheng/im.jpg" mode="widthFix"></image>
                </view>
                <view class="right">
                    <text class="shuoming">车弹窗购物车弹窗购物车弹窗车弹窗购物车弹窗购物车弹窗</text>
                    <text class="price">￥22</text>
                </view>
                <view class="del" bindtap="closeCar">
                    <image src="https://qncdn.playonwechat.com/shangcheng/icon_close.png" mode="widthFix"></image>
                </view>
            </view>
            <view class="kuanshi">
                <view class="title">款式：</view>
                <view class="leibie">
                    <text data-num="1"  class="white {{_num==1 ? 'red':''}}" bindtap="xuanze">分类1</text>
                    <text data-num="2"  class="white {{_num==2 ? 'red':''}}" bindtap="xuanze">分类2</text>
                    <text data-num="3"  class="white {{_num==3 ? 'red':''}}" bindtap="xuanze">分类3</text>
                    <text data-num="4"  class="white {{_num==4 ? 'red':''}}" bindtap="xuanze">分类4</text>
                </view>
            </view>
            <view class="mid">
                <view class="buy">
                    <text>购买数量：</text>
                    <text class="gray">剩余222件</text>
                </view>
                <view class="num">
                    <button class="reduce {{minusStatus}}" bindtap="bindMinus">-</button>
                    <input type="number"  bindchange="bindManual" value="{{price}}" readonly="readonly"/>
                    <button class="add normal" bindtap="bindPlus">+</button>
                </view>
            </view>
        </view>
        <view class="btn">
            <button class="addCar" bindtap="addCars">加入购物车</button>
            <button class="buy" bindtap="buy">立即购买</button>
        </view>
    </view>
</view>
