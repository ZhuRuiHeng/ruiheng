/* pages/pintuan/pintuan.wxss */
.main{width:100%;background: #fff;position: relative;}
.main:after {
  content:" ";
  display: inline-block;
  width:100%;
  position:absolute;
  top:0;
  left:0;
  border:1px solid #F7F7F7;
  -webkit-transform:scaleY(0.5);
  transform:scaleY(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}

.show{display:block;}
.hidden{display:none;}
.service-list{
	padding: 0 20rpx;
}
.service-item{
	display: flex;
    position: relative;
}
.service-item:after{
  content:" ";
  display: inline-block;
  width:100%;
  position:absolute;
  top:0;
  left:0;
  border:1px solid #F7F7F7;
  -webkit-transform:scaleY(0.5);
  transform:scaleY(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}
.service-img{
	width: 180rpx;
	height: 180rpx;
}
.service-item image{
	width: 180rpx;
	height: 180rpx;
  margin:12rpx 0 0 0;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #000000;
	width: 70%;
	font-size: 24rpx;
    padding-top:20rpx;white-space:nowrap; overflow:hidden; text-overflow:ellipsis; 
}
.service-text .service-tite2{
  font-size: 20rpx;
  color:#626262;
   padding-top:6rpx;
}
.service-tags{
	margin: 6rpx 0;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}
.service-city{
	color: #666;
}
.caozuo{
  width: 70%;
  display: flex;
  justify-content:space-between;
  height: 63rpx;
  line-height: 63rpx;
}
.caozuo .service-price{
    color:#ff4444;
    font-size:26rpx;
}
.caozuo .service-gouwu image{
    width: 56rpx;
    height: 56rpx;
}
.service-text .buy-response {
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
    height: 120rpx;
    width: 120rpx;
    opacity: 0;
}
.caozuo .service-gouwu{
    position:relative;
    bottom:6rpx;
    font-size:24rpx;
    background: -webkit-linear-gradient(left, #FD8563 , #F96070); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #FD8563 , #F96070); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #FD8563 , #F96070); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #FD8563 , #F96070); /* 标准的语法 */
    color:#fff;
    padding:0 20rpx;
    border-radius: 10rpx;
}
.old.service-price{
  text-decoration: line-through;
  color:#626262;
  padding-left: 10rpx;
  font-size:20rpx;
}
.member{
  font-size: 22rpx;
  color: #ff4444;
}
.member image{
  width:40rpx;
  vertical-align: middle;
  border-radius: 50%;
  margin-top: 0;
  margin-left:-10rpx;
  background: #fff;
}
.member text{
    line-height:52rpx;
}
.member text{
  line-height:52rpx;
