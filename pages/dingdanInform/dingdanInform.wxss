/* pages/dingdanInform/dingdanInform.wxss */
.container {
  padding: 0;
  font-size: 24rpx;
}
.address{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction:column;
  background:#fff url(../images/next.png) no-repeat center right;
  background-size: 50rpx;
}
.address .inform{
  display: flex;
  justify-content:space-between;
}
.address .inform .left image{
  width: 32rpx;
  vertical-align: middle;
}
.address .inform .right{
  padding:0 20rpx 0 0;
}
.address .dizhi{
    margin-left:36rpx;
    font-size: 22rpx;
    color:#626262;    
}
.line,.line image{
  width: 100%;
}
.shop{
    width: 100%;
    background: #fff;
    display: flex;
    justify-content:space-between;
    font-size: 24rpx;
    padding:0 20rpx;
    box-sizing: border-box;
    vertical-align: middle;
}
 .shop .seting button::after{
    content:none;
}
.shop .radio icon{
    position: relative;
    top:13rpx;
}
.shop .checkbox .radio image{
    width:42rpx;
    vertical-align: middle;
}
/*列表  */
.show{display:block;}
.hidden{display:none;}
.shangpin{
  width: 100%;
}
.service-list{
    padding: 20rpx 0 0 0;
    background: #fff;
}
.service-item{
	display: flex;
    position: relative;
    background: #f6f6f6;
    padding:0 20rpx;
    box-sizing: border-box;
    margin:0 0 20rpx 0;
}
.service-img{
	width: 180rpx;
	height: 180rpx;
}
.service-item image{
	width: 160rpx;
	height: 160rpx;
    margin:10rpx 0 0 0;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #000000;
	width: 100%;
  font-size: 24rpx;
  padding-top:20rpx;
  height: 76rpx;
  display: -webkit-box;  
  display: -moz-box;  
  overflow: hidden;  
  text-overflow: ellipsis;  
  word-break: break-all;  
  -webkit-box-orient: vertical;  
  -webkit-line-clamp:2;  
}
.service-tags{
	margin: 6rpx 0;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}
.service-city{
	color: #666;
}
.caozuo{
  padding-top: 20rpx;
  display: flex;
  justify-content:space-between;
  height: 63rpx;
  line-height: 63rpx;
}
.caozuo .service-price{
    color:#ff4444;
    font-size:26rpx;
}
.caozuo .service-gouwu{
    font-size: 24rpx;
    color:#626262;
}
.caozuo .service-gouwu image{
    width: 56rpx;
    height: 56rpx;
    vertical-align: middle;
}
.service-text .buy-response {
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
    height: 120rpx;
    width: 120rpx;
    opacity: 0;
}
.controllist,.controllist{
  padding:20rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content:space-between;
  background: #fff;
  border-bottom:1px solid #e5e5e5;
}
.youhui .right{
  padding-right:40rpx;
  background:#fff url(../images/next.png) no-repeat center right;
  background-size: 50rpx;
}
.control{
  padding:10rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  background: #fff;
  border-bottom:1px solid #e5e5e5;
}
.control .left{
  line-height: 52rpx;
  margin-right:30rpx;
}
.page-section.page-section-gap{
  width: 30rpx;
}
.jine{
  width:100%;
  border-bottom:1px solid #e5e5e5;
}
.jine .controllist{
  padding: 10rpx 20rpx;
  border:none;
}
.fixed{
  width: 100%;
  position: fixed;
  display: flex;
  left:0;
  bottom:0;
}
.heji{
  flex: 2;
  text-align: right;
  padding-right:20rpx;
  padding:20rpx;
  border-top:1px solid #e5e5e5;
}
.heji text{
  color:#ff4444;
}
.submit{
  flex:1;
  background: #ff4444;
  color:#fff;
  text-align: center;
  padding:20rpx;
}
.top{
  margin-top: 20rpx;
  border-top:1px solid #e5e5e5;
}