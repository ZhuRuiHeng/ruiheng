/* pages/car/car.wxss */
/*top  */
radio{
    width: 40rpx;
}
.shop{
    width: 100%;
    background: #fff;
    display: flex;
    justify-content:space-between;
    font-size: 24rpx;
    padding:0 20rpx;
    box-sizing: border-box;
    vertical-align: middle;
}
.shop .seting button{
    font-size: 24rpx;
    color:#626262;
    background: #fff;
}
 .shop .seting button::after{
    content:none;
    width:200%;
    height:200%;
    position:absolute;
    top:0;
    left:0;
    border:1px solid rgba(0, 0, 0, 0.2);
    -webkit-transform:scale(0.5);
    transform:scale(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
    border-radius:10px;
}
.shop .radio icon{
    position: relative;
    top:13rpx;
}
.shop .checkbox .radio radio{
    width: 30rpx;
}
.shop .checkbox .radio image{
    width:42rpx;
    vertical-align: middle;
}
.radio-group{
    font-size: 26rpx;
    display: flex;
    flex-direction: column;
    padding:70rpx 10rpx 0 0;
  }
/*列表  */
.main{width:100%;border-top:1rpx solid #e5e5e5;background: #fff;}
.nav{width:100%;height:68rpx;display:flex;flex-direction:row;border-bottom:1rpx solid #e5e5e5;}
.default{line-height:68rpx;text-align:center;flex:1;color:#000;font-size:28rpx;}
.red{line-height:68rpx;text-align:center;color:#fc5558;flex:1;font-size:28rpx;}
.red span{display:inline-block;padding:0 20rpx;border-bottom:2px solid #ff4444;}
.show{display:block;}
.hidden{display:none;}
.service-list{
	padding: 20rpx 0;
    background: #fff;
}
.service-item{
	display: flex;
    position: relative;
    background: #f6f6f6;
    padding:0 20rpx;
    box-sizing: border-box;
    margin:0 0 20rpx 0;
}
.service-img{
	width: 180rpx;
	height: 180rpx;
}
.service-item image{
	width: 160rpx;
	height: 160rpx;
    margin:10rpx 0 0 0;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .service-tite{
	color: #000000;
	width: 100%;
	font-size: 24rpx;
    padding-top:20rpx;
    height: 76rpx;
    display: -webkit-box;  
    display: -moz-box;  
    overflow: hidden;  
    text-overflow: ellipsis;  
    word-break: break-all;  
    -webkit-box-orient: vertical;  
    -webkit-line-clamp:2;  
}
.service-tags{
	margin: 6rpx 0;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}
.service-city{
	color: #666;
}
.caozuo{
  padding-top: 20rpx;
  display: flex;
  justify-content:space-between;
  height: 63rpx;
  line-height: 63rpx;
}
.caozuo .service-price{
    color:#ff4444;
    font-size:26rpx;
}
.caozuo .service-gouwu{
    font-size: 24rpx;
    color:#626262;
}
.caozuo .service-gouwu image{
    width: 56rpx;
    height: 56rpx;
}
.service-text .buy-response {
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
    height: 120rpx;
    width: 120rpx;
    opacity: 0;
}