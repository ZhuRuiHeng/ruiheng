/* pages/my/my.wxss */
@import "../../utils/foot.wxss";
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 100px;
}
.xuanze{
    color: #626262;
    font-size:26rpx;
    display: flex;
    justify-content:space-between;
    border-top:1px solid #e5e5e5;
    color:#000;
    padding: 20rpx;
    background: #fff;
}
.xuanze .nextImg{
   font-size: 24rpx;
   color:#848484;
}
.xuanze .nextImg image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}
.listAll{
    padding:0 0 20rpx 20rpx;
    background: #fff;
}
.listAll .list{
    display: flex;
    justify-content:space-around;
    text-align: center;
    border-top:1px solid #e5e5e5;
}
.listAll .list .flex text{
     display: block;
     font-size: 24rpx;
}
.listAll .list .flex image{
    width: 50rpx;    
}