/* pages/my/my.wxss */
@import "../../utils/foot.wxss";
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border:2px solid #fff;
}
.userinfo-nickname {
  color: #000;
  font-size:24rpx;
}
.usermotto {
  margin-top: 100px;
}
.xuanze,.listAll .list{
  position: relative;
}
.xuanze:after,.listAll .list:after{
    content:" ";
    display: inline-block;
    width:200%;
    position:absolute;
    top:0;
    left:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scale(0.5);
    transform:scale(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.xuanze:before{
    content:" ";
    display: inline-block;
    width:200%;
    position:absolute;
    bottom:0;
    left:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scale(0.5);
    transform:scale(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.xuanze.borerNone:before{
  content:none;
}
.xuanze{
    font-size:26rpx;
    display: flex;
    justify-content:space-between;
    color:#000;
    padding: 20rpx;
    background: #fff;
}
.xuanze .nextImg{
   font-size: 24rpx;
   color:#848484;
}
.xuanze .nextImg image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}
.listAll{
    padding:0 0 20rpx 20rpx;
    background: #fff;
}
.listAll .list{
    display: flex;
    justify-content: space-around;
    text-align: center;
    padding-top: 20rpx;
}
.listAll .list .flex{
    flex: 1;
    position: relative;
}
.listAll .list .flex text.num{
  position:absolute;
  right:60rpx;
  height:1.6em;
  min-width:1.6em;
  line-height:1.6;
  padding:0 .4em;
  font-size:10px;
  font-family:tahoma;
  border-radius:.8em;
  background:#FF4444;
  color:#fff;
  text-align:center;
  white-space:nowrap;
  transform:translateX(50%);
  transform-origin:-10% center;
  z-index:10;
  box-shadow:0 0 0 1px #fff;
  box-sizing:border-box;
}
.listAll .list .flex text{
     display: block;
     font-size: 24rpx;
}
.listAll .list .flex image{
    width: 50rpx;    
    margin-top:16rpx;
}
.listAll .list .flex image3{
    width: 60rpx; 
}
.xuanze .carNum text{
    background: #98a1a9;
    color:#fff;
    width: 30rpx;
    padding:0 20rpx;
    border-radius: 30rpx;
}
.bottom{
