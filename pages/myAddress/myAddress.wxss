/* pages/myAddress/myAddress.wxss */
.container{
  font-size: 26rpx;
  background: #fff;
}
 radio-group{
   padding-left:20rpx;
 }
 radio-group label{
   display: flex;
   justify-content: flex-start;
   padding-right:20rpx;
   border-bottom: 1px solid #e5e5e5;
 }
radio-group label radio{
  vertical-align: middle;
}
radio-group label .xinxi{
  padding:10rpx;
}
radio-group label .xinxi .name{
  padding:10rpx 0;
}
radio-group label .xinxi .weizhi{
    color:#626262;
    font-size: 22rpx;
}
radio-group label .icon icon,radio-group label radio{
  position: relative;
  top:30rpx;
  vertical-align: middle;
}
radio-group label .icon{
  padding:0 20rpx;
}
.newAddress{
  padding:20rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content:space-between;
  border-bottom: 1px solid #e5e5e5;
}
.newAddress image{
  width: 40rpx;
  vertical-align: middle;
}
.newAddress .left image{
  margin-right: 20rpx;
}