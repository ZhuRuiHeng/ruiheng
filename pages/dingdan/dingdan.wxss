scroll-view{
  margin-top: 70rpx;
}
.service-list navigator{
    border-bottom: 1rpx solid #e8e8e8;
    border-top: 1rpx solid #e8e8e8;
    margin-top: 20rpx;
} 
.service-item{
	display: flex;
	position: relative;
    background: #f8f8f8;
    padding: 0 20rpx;
}
.service-img{
	width: 180rpx;
	height: 180rpx;
}
.service-item image{
	width: 160rpx;
	height: 160rpx;
    margin:10rpx 0 0 0;
}
.service-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.service-text .fenlei{
    font-size: 20rpx;
    color:#626262;
}
.service-text .service-tite{
	color: #000000;
	width: 100%;
	font-size: 24rpx;
    padding-top:20rpx;
    height: 76rpx;
    display: -webkit-box;  
    display: -moz-box;  
    overflow: hidden;  
    text-overflow: ellipsis;  
    word-break: break-all;  
    -webkit-box-orient: vertical;  
    -webkit-line-clamp:2;  
}
.service-tags{
	margin: 6rpx 0;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}
.service-city{
	color: #666;
}
.service-text .buy-response {
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
    height: 120rpx;
    width: 120rpx;
    opacity: 0;
}
.jiage{
    font-size:24rpx;
    padding:0 0 0 20rpx;
}
.jiage .price{
    padding: 20rpx 0 0 0;
}
.jiage .sum{
    text-align: right;
    color:#626262;
    padding: 20rpx 0 0 0;
}
.heji{
    font-size: 24rpx;
    text-align: right;
    padding:20rpx;
    background: #fff;
}
.heji .money text{
    color:#ff4444;
}
/*按钮  */
.button{
    display: flex;
    justify-content: flex-end;
    background: #fff;
    border-top: 1rpx solid #e8e8e8;
}
.button button{
    display: inline-block;
    font-size: 22rpx;
    margin: 20rpx 20rpx;
    background: #fff;
}
button::after{
    content: "";
}
navigator-hover{
  opacity: 1;
}
.service-tite .bg{
    color:#ff4444;background:#FCC1D4;margin:0 10rpx 0 0;padding:0 6rpx;display: inline-block;
}
.zan-toast {
  position: fixed;
  top: 35%;
  left: 20%;
  transform: translateZ(0) translateY(-100%);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 14px;
  width: 60%;
  line-height: 1.5em;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 10px;
  text-align: center;
  border-radius: 4px;
  z-index: 100;
}
