/* pages/tuijianShare/tuijianShare.wxss */
.container{
  width: 750rpx;
  min-height: 100%;
  height: auto;
  background: #fff;
  position: absolute;
  top:0;
  left:0;
  display: block;
  border-top: 1rpx solid #ededed;
}


.img_warp{
  width: 150rpx;
  height: 150rpx;
  display: block;
  margin: 60rpx auto 0; 
  background: red;
  border-radius: 50%;
}

.img_warp image{
  width: 100%;
  height: 100%;
  display: block;
}

.share_block{
  width: 600rpx;
  height: 250rpx;
  margin: 30rpx auto 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background: url(https://qncdn.playonwechat.com/shangcheng/card.png) no-repeat;
  background-size: 100% 100%; 
}

.type{
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.desc{
  font-size: 30rpx;
  color: #333;
  line-height: 50rpx;
  margin-top: 30rpx;
  text-align: center;
}

.btn{
  width: 700rpx;  
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  background: #d9c5cd;
  border-radius: 40rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin: 30rpx auto;
}

.btn.received{
  background: #eee;
}

.detail_wrap{
  border: 1rpx solid #ededed;
  color: #333;
  font-size: 30rpx; 
  padding: 20rpx;
  box-sizing: border-box;
  width: 700rpx;
  margin: 0 auto;
  text-align: center;
}

.item_wrap{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin-top: 30rpx;
}

.item_wrap image{
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto;
}

.title{
  font-size: 30rpx;
  color: #333;
  margin: 15rpx 0;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.item{
  width: 33.33%;
}

.go_to{
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ededed;
  margin: 0 auto;
}