    <!--foot  -->
     <view class="fixed">
        <view class="shouye" bindtap="backHome">
            <view class="imgLogo"><image src="https://qncdn.playonwechat.com/shangcheng/shouye.png" mode="widthFix"/></view>
            <text>首页</text>
        </view>
        <view class="gouwu" bindtap="tianjia">
            <view class="imgLogo" style="width:48rpx;">
                <text class="buyNum"></text>
                <image src="https://qncdn.playonwechat.com/shangcheng/gouwu.png" mode="widthFix"/>
            </view>
            <text >购物车</text>
        </view>
        <view class="addCars style" bindtap="addCar">加入购物车</view>
        <view class="buyNow style" bindtap="addCar">立即购买</view>
    </view> 
    <!--型号弹窗  -->
    <view class="bg {{addCar?'show':'hidden'}}"></view>
    <view class="carBox {{addCar?'show':'hidden'}} carBox{{sum}}">
        <view class="padding">
            <view class="top">
                <view class="left">
                    <image src="../images/7.jpg" mode="widthFix"></image>
                </view>
                <view class="right">
                    <text class="shuoming">车弹窗购物车弹窗购物车弹窗车弹窗购物车弹窗购物车弹窗</text>
                    <text class="price">￥22</text>
                </view>
                <view class="del" bindtap="closeCar">
                    <image src="https://qncdn.playonwechat.com/shangcheng/icon_close.png" mode="widthFix"></image>
                </view>
            </view>
            <view class="kuanshi">
                <view class="title">款式：</view>
                <view class="leibie">
                    <text data-num="1"  class="white {{_num==1 ? 'red':''}}" bindtap="xuanze">18寸</text>
                    <text data-num="2"  class="white {{_num==2 ? 'red':''}}" bindtap="xuanze">22寸</text>
                    <text data-num="3"  class="white {{_num==3 ? 'red':''}}" bindtap="xuanze">25寸</text>
                    <text data-num="4"  class="white {{_num==4 ? 'red':''}}" bindtap="xuanze">40.5寸</text>
                </view>
            </view>
            <view class="mid">
                <view class="buy">
                    <text>购买数量：</text>
                    <text class="gray">剩余222件</text>
                </view>
                <view class="num">
                    <button class="reduce {{minusStatus}}" bindtap="bindMinus">-</button>
                    <input type="number"  bindchange="bindManual" value="{{price}}" readonly="readonly"/>
                    <button class="add normal" bindtap="bindPlus">+</button>
                </view>
            </view>
        </view>
        <view class="btn" bindtap="xiayibu">
            <button class="ok">下一步</button>
        </view>
    </view>
    <!--弹窗结束  -->
</view>
